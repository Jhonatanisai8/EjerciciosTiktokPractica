
Algoritmo ejercici01Aumento
	
	//defimos las variables a utilizar
	Definir  sueldoFijo,aumento,montoAumento Como Real;
	aumento = 0.15;
	
	//pedimos el sueldo 
	Escribir "Ingrese el Sueldo Fijo del Empleado: ";
	Leer  sueldoFijo;
	
	//hacemos el c√°lculo del 15% sobre el sueldo
	montoAumento = (sueldoFijo * aumento);
	
	//mostramos los resultados
	Escribir "Sueldo fijo del empleado: ",sueldoFijo;
	Escribir "Monto Aumento (15%): ",montoAumento;
	Escribir "Sueldo total: ",(montoAumento + sueldoFijo);

FinAlgoritmo